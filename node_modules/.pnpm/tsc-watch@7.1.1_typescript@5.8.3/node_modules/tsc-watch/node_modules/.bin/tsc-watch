#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules/tsc-watch/dist/lib/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules/tsc-watch/dist/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules/tsc-watch/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules/tsc-watch/dist/lib/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules/tsc-watch/dist/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules/tsc-watch/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/tsc-watch@7.1.1_typescript@5.8.3/node_modules:/home/skhan/Backend/Threads-app/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../dist/lib/tsc-watch.js" "$@"
else
  exec node  "$basedir/../../dist/lib/tsc-watch.js" "$@"
fi
